{
    "name": "Shorty",
    "version": "0.0.1",
    "description": "open shortcut",
    "manifest_version": 2,
    "icons": {
      "16": "assets/images/tasky.png",
      "32": "assets/images/tasky.png",
      "48": "assets/images/tasky.png",
      "128": "assets/images/tasky.png"
    },
    "browser_action": {
        "default_popup": "popup.html",
        "browser_style": true
    },
    "options_ui": {
        "page": "options.html",
        "browser_style": false
    },
    "permissions": [
        "storage"
    ],
    "browser_specific_settings": {
        "gecko": {
          "id": "addon@esempio3.com",
          "strict_min_version": "42.0"
        }
    }
      
                  
  }

  